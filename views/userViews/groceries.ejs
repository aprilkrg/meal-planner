<p>THIS IS THE GROCERY LIST PAGE</p>


<ul>
    <% allMealsReferenceForEJS.forEach(function(eachMeal) { %>
      <li>
        <form action="/meals/<%= eachMeal._id %>?_method=DELETE"
          class="delete-form" method="POST">
          <button type="submit">X</button>
        </form>
        <p><%= eachMeal.name %></p>
          - 
        <%= eachMeal.done ? 'done' : 'not done' %>
      </li>
    <% }); %>
  </ul>


